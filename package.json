{
  "name": "voice2code",
  "displayName": "Voice2Code",
  "description": "Privacy-focused speech-to-text extension for IDEs with configurable local and remote model support",
  "version": "0.1.0",
  "publisher": "voice2code",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiranshivaraju/voice2code.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:voice2code.startRecording",
    "onCommand:voice2code.stopRecording",
    "onCommand:voice2code.toggleRecording"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voice2code.startRecording",
        "title": "Voice2Code: Start Recording"
      },
      {
        "command": "voice2code.stopRecording",
        "title": "Voice2Code: Stop Recording"
      },
      {
        "command": "voice2code.toggleRecording",
        "title": "Voice2Code: Toggle Recording"
      },
      {
        "command": "voice2code.openSettings",
        "title": "Voice2Code: Open Settings"
      },
      {
        "command": "voice2code.testConnection",
        "title": "Voice2Code: Test Connection"
      }
    ],
    "keybindings": [
      {
        "command": "voice2code.toggleRecording",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      }
    ],
    "configuration": {
      "title": "Voice2Code",
      "properties": {
        "voice2code.endpoint.url": {
          "type": "string",
          "default": "http://localhost:11434/api/transcribe",
          "description": "STT model endpoint URL"
        },
        "voice2code.endpoint.model": {
          "type": "string",
          "default": "whisper-large-v3",
          "description": "STT model name"
        },
        "voice2code.endpoint.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds"
        },
        "voice2code.audio.deviceId": {
          "type": "string",
          "default": "default",
          "description": "Audio input device ID"
        },
        "voice2code.audio.sampleRate": {
          "type": "number",
          "default": 16000,
          "description": "Audio sample rate in Hz"
        },
        "voice2code.audio.format": {
          "type": "string",
          "default": "mp3",
          "enum": [
            "mp3",
            "wav"
          ],
          "description": "Audio encoding format"
        },
        "voice2code.ui.previewEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Show transcription preview before insertion"
        },
        "voice2code.ui.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar indicator"
        },
        "voice2code.ui.audioFeedback": {
          "type": "boolean",
          "default": true,
          "description": "Play audio feedback on start/stop"
        },
        "voice2code.history.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable transcription history"
        },
        "voice2code.history.maxItems": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of history items"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "form-data": "^4.0.0",
    "lamejs": "^1.2.0",
    "node-record-lpcm16": "^1.0.1"
  }
}
